:12px;">_exponentialRestOptionsRoutes:
    resource: "@EzPublishRestBundle/Resources/config/routing.yml"
    prefix: %exponential_rest.path_prefix%
    type: rest_options
&nbsp;
login:
    path:   /login
    defaults:  { _controller: exponential.security.controller:loginAction }
login_check:
    path:   /login_check
logout:
    path:   /logout</pre>=20
</div>
</div>
